                $(".user_menu_sub").slideDown();
                $(this).find("i").removeClass("fa-angle-double-down");
                $(this).find("i").addClass("fa-angle-double-up");
            }
            else {
                $(".user_menu_sub").slideUp(200);
                $(this).find("i").removeClass("fa-angle-double-up");
